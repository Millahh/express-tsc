{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
},
"include": [
  "src/**/*.ts",
  "src/types/**/*.d.ts"
]
}